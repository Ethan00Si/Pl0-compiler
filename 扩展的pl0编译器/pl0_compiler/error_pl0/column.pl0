var r of int, h of int, len of int, a1 of int, a2 of int, volumn of int, aaa of float;

begin
	aaa := 1.098765456789876543567876545678765456786543;
	read(r);
	read(h);
	
	len := 2 * 3 * r;
	a1 := 3 * r * r;
	a2 := a1 + a1 + len * h;
	volumn := a1 * h;
	
	write(len);
	write(a1);
	write(a2);
	write(volumn);
end.
